<Window x:Class="Calendo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calendo" Height="350" Width="300" MinHeight="170" MinWidth="300"
        WindowStyle="None" StateChanged="WindowStateChanged">
    <Grid Background="#FEFEFE">
        <Grid.Resources>
            <Style x:Key="NormalTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Margin" Value="12,4" />
                <Setter Property="Foreground" Value="#FF464646" />
            </Style>
            <Style x:Key="ListBoxItemTextStyle" TargetType="TextBlock" BasedOn="{StaticResource NormalTextStyle}">
                <Setter Property="Margin" Value="0" />
            </Style>
            <Style x:Key="TransparentWithBorder" TargetType="Control">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="3" />
                <Setter Property="BorderBrush" Value="DarkGray" />
            </Style>
            <Style x:Key="WindowControlButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Name="ButtonBorder">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="LightGray" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FFA0A0A0" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="AutoCompleteBoxStyle" TargetType="Border">
                <Setter Property="Margin" Value="12,0,12,0" />
                <Setter Property="Background" Value="#FFEAEAEA" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Name="btnSettings" Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource WindowControlButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CALENDO" FontWeight="Bold" FontSize="14" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="#FF5B5B5B"/>
                    <Image Source=".\Images\settings.png" />
                </StackPanel>
            </Button>

            <Border Grid.Column="1" Background="Transparent" MouseDown="DragWindow" />


            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="MinimiseWindow" Style="{StaticResource WindowControlButtonStyle}">
                    <Image Source=".\Images\minimise.png" />
                </Button>

                <Button x:Name="btnMaximise" Click="MaximiseWindow" Style="{StaticResource WindowControlButtonStyle}">
                    <Image Source=".\Images\maximise.png" />
                </Button>

                <Button x:Name="btnRestore" Click="MaximiseWindow" Style="{StaticResource WindowControlButtonStyle}" Visibility="Collapsed">
                    <Image Source=".\Images\restore.png" />
                </Button>

                <Button Click="CloseWindow" Style="{StaticResource WindowControlButtonStyle}">
                    <Image Source=".\Images\close.png" />
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock Name="txbEnterCommand" Grid.Row="1" Margin="22,7" Style="{StaticResource NormalTextStyle}">
                enter /command, or search
            </TextBlock>
            <TextBox Name="tbxCommandBar" Grid.Row="1" Margin="12,6,12,4" FontSize="18" Foreground="DarkSlateGray" Style="{StaticResource TransparentWithBorder}" LostFocus="TbxCommandBarLostFocus" GotFocus="TbxCommandBarGotFocus" KeyUp="TbxCommandBarKeyUp" TextChanged="TbxCommandBarTextChanged"/>
        </Grid>

        <ListBox Name="lsbItemsList" Grid.Row="2" VerticalAlignment="Stretch" Margin="12,0,12,6" Style="{StaticResource TransparentWithBorder}">
            <ListBoxItem>
                <TextBlock Text="1. Meeting at 9AM" Style="{StaticResource ListBoxItemTextStyle}"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="2. Work on Calendo" Style="{StaticResource ListBoxItemTextStyle}"/>
            </ListBoxItem>
        </ListBox>

        <Border Name="bdrAutoSuggestBorder" Grid.Row="2" Style="{StaticResource AutoCompleteBoxStyle}" Margin="12,-4,12,0" Visibility="Collapsed">
            <ListBox Name="lsbAutoSuggestList" KeyDown="LsbAutoSuggestListKeyDown" ItemsSource="{Binding SuggestionList}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Style="{StaticResource NormalTextStyle}" Margin="0,4" FontSize="14" Text="{Binding}" TextWrapping="Wrap" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>
