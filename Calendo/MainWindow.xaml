<Window x:Class="Calendo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:Calendo.Converters" 
        xmlns:Calendo="clr-namespace:Calendo" 
        Title="Calendo" Icon="icon.png" Height="400" Width="300" MinHeight="150" MinWidth="300"
        WindowStyle="None" StateChanged="WindowStateChanged">

    <Window.Resources>
        <Converters:EntryToDateTimeStringConverter x:Key="DateTimeConverter" />
        <Converters:EntryToDateTimeVisibilityConverter x:Key="DateTimeVisibilityConverter" />
        <Converters:EntryToBrushConverter x:Key="EntryToBrushConverter" />
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static Calendo:MainWindow.UndoCommand}" Executed="UndoHandler" />
        <CommandBinding Command="{x:Static Calendo:MainWindow.RedoCommand}" Executed="RedoHandler" />
        <CommandBinding Command="{x:Static Calendo:MainWindow.DelCommand}" Executed="DeleteHandler" />
    </Window.CommandBindings>

    <Grid Background="#FEFEFE" MouseDown="GridMouseDown">
        <Grid.Resources>
            <Style x:Key="NormalTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="12,4" />
                <Setter Property="Foreground" Value="#FF464646" />
            </Style>
            <Style x:Key="ListBoxItemTextStyle" TargetType="TextBlock" BasedOn="{StaticResource NormalTextStyle}">
                <Setter Property="Margin" Value="0" />
            </Style>
            <Style x:Key="ListBoxItemSubtleTextStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource ListBoxItemTextStyle}">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="Gray" />
            </Style>
            <Style x:Key="TaskTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ListBoxItemTextStyle}">
                <Setter Property="Foreground" Value="{Binding Value, Converter={StaticResource EntryToBrushConverter}}" />
            </Style>
            <Style x:Key="TransparentWithBorder" TargetType="Control">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="3" />
                <Setter Property="BorderBrush" Value="DarkGray" />
            </Style>
            <Style x:Key="WindowControlButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Name="ButtonBorder">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="LightGray" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FFA0A0A0" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="AutoCompleteBoxStyle" TargetType="Border">
                <Setter Property="Margin" Value="12,0,12,0" />
                <Setter Property="Background" Value="#FFEAEAEA" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource TransparentWithBorder}">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#FF464646" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label x:Name="FocusLabel" />

            <Button Name="SettingsButton" Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource WindowControlButtonStyle}" Click="SettingsButtonClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CALENDO" FontWeight="Bold" FontSize="14" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="#FF5B5B5B"/>
                    <Image Source=".\Images\settings.png" />
                </StackPanel>
            </Button>

            <Border x:Name="TitleBar" Grid.Column="1" Background="Transparent" MouseDown="DragWindow" />

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="MinimiseWindow" Style="{StaticResource WindowControlButtonStyle}">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value=".\Images\minimise.png" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Source" Value=".\Images\minimiseHover.png" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>

                <Button x:Name="MaximiseButton" Click="MaximiseWindow" Style="{StaticResource WindowControlButtonStyle}">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value=".\Images\maximise.png" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Source" Value=".\Images\maximiseHover.png" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>

                <Button x:Name="RestoreButton" Click="MaximiseWindow" Style="{StaticResource WindowControlButtonStyle}" Visibility="Collapsed">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value=".\Images\restore.png" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Source" Value=".\Images\restoreHover.png" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>

                <Button x:Name="CloseButton" Click="CloseWindow" Style="{StaticResource WindowControlButtonStyle}">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value=".\Images\close.png" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Source" Value=".\Images\closeHover.png" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock Name="EnterCommandWatermark" Grid.Row="1" Margin="22,8" Style="{StaticResource NormalTextStyle}">
                enter /command, or search
            </TextBlock>
            <TextBox Name="CommandBar" Grid.Row="1" Margin="12,6,12,4" FontSize="16" Foreground="#FF464646" 
                     Style="{StaticResource TransparentWithBorder}"
                     LostFocus="CommandBarLostFocus" 
                     GotFocus="CommandBarGotFocus" 
                     KeyUp="CommandBarKeyUp" 
                     TextChanged="CommandBarTextChanged"/>
        </Grid>

        <ListBox Name="TaskList" Grid.Row="2" VerticalAlignment="Stretch" Margin="12,0,12,3" HorizontalContentAlignment="Stretch" 
                 Style="{StaticResource TransparentWithBorder}"
                 MouseDoubleClick="TaskListDoubleClick"
                 FocusVisualStyle="{x:Null}" SelectionChanged="TaskListSelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Key}" Style="{StaticResource ListBoxItemTextStyle}" Margin="0,0,6,0" />
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Value.Description}" 
                                       Style="{StaticResource TaskTextStyle}" 
                                       TextWrapping="WrapWithOverflow"/>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                        Visibility="{Binding Value, Converter={StaticResource DateTimeVisibilityConverter}, ConverterParameter='StackPanel'}">
                                <TextBlock Text="{Binding Value, Converter={StaticResource DateTimeConverter}, ConverterParameter='StartDate'}" 
                                           Style="{StaticResource ListBoxItemSubtleTextStyle}" />
                                <TextBlock Text="to" Margin="4,0,4,0" 
                                           Style="{StaticResource ListBoxItemSubtleTextStyle}" 
                                           Visibility="{Binding Value, Converter={StaticResource DateTimeVisibilityConverter}, ConverterParameter='RangeText'}"/>
                                <TextBlock Text="{Binding Value, Converter={StaticResource DateTimeConverter}, ConverterParameter='EndDate'}" 
                                           Style="{StaticResource ListBoxItemSubtleTextStyle}"
                                           Visibility="{Binding Value, Converter={StaticResource DateTimeVisibilityConverter}, ConverterParameter='RangeText'}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Name="AutoSuggestBorder" Grid.Row="2" Style="{StaticResource AutoCompleteBoxStyle}" Margin="12,-4,12,0" Visibility="Collapsed"
                Panel.ZIndex="1">
            <ListBox Name="AutoSuggestList" ItemsSource="{Binding SuggestionList}"
                     KeyDown="AutoSuggestListKeyDown"
                     KeyUp="AutoSuggestListKeyUp"
                     MouseUp="AutoSuggestListMouseUp" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource NormalTextStyle}" Margin="0,4" FontSize="13" Text="{Binding Command}" TextWrapping="Wrap" />
                            <TextBlock Style="{StaticResource ListBoxItemSubtleTextStyle}" Margin="5,4" FontSize="13" Text="{Binding Description}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Grid x:Name="ControlBar" Grid.Row="3" Margin="12,3" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ButtonStyle}" Margin="0,0,6,0" Click="ChangeButtonClick">change</Button>
            <Button Grid.Column="1" Style="{StaticResource ButtonStyle}" Margin="6,0,0,0">remove</Button>
        </Grid>
    </Grid>
</Window>
